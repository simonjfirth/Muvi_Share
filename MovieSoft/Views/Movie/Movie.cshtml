@model  MovieSoft.Models.SoftMovie
@{
    ViewBag.Title = "Movie";
}


<div class="mainHolderMovie">
    <h2 class="col-lg-12">
        <h2>@Model.Title</h2>
    </h2>

    <div class="col-lg-10">
        <p>@Model.Overview</p>
    </div>
    <div class="col-lg-10 videoHolder">
        <iframe src="@ViewBag.VideoUrl" width="100%" height="100%"></iframe>
    </div>
    <div class="col-lg-2 infront">
        <img src="@Model.ImageUrl" class="shadow" />
    </div>


    <div class="col-lg-12 genreList">
        <h3>Genres</h3>
        @foreach (var gen in @Model.GetGenresForMovie())
        {
            <input type="button" onclick="updateMovie(@gen.ID)" value=@gen.Name>
        }
        <h4>Related Movies</h4>
        <div id="dvCategoryResults">
            @{Html.RenderPartial("GetRelatedFilms", new List<MovieSoft.Models.SoftMovie>());}
        </div>
    </div>
</div>


<script type="text/javascript">
    function updateMovie(ID) {
        $("#dvCategoryResults").load('@(Url.Action("GetRelatedFilms", "Movie", null, Request.Url.Scheme))?ID=' + ID);
    }

</script>



